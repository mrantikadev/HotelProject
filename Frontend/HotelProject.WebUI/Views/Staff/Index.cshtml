@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Unvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.StaffId</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="#" class="btn btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-rounded btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-rounded btn-outline-warning">Detaylar</a></td>
        </tr>
    }
    
</table>
<a href="#" class="btn btn-rounded btn-outline-info">Yeni Personel Girişi</a>

